# Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/jira_metrics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jira_metrics
DB_USER=username
DB_PASSWORD=password

# Frontend URL cors configuration
FRONTEND_URL=http://localhost:3000
# Additional allowed origins (comma-separated)
# For network access, add your local IP: http://YOUR_LOCAL_IP:3000
# For dev tunnels, add: https://your-tunnel-url.devtunnels.ms
ALLOWED_ORIGINS=http://localhost:3000,http://YOUR_LOCAL_IP:3000

# Jira Configuration
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Security
JWT_SECRET=your-super-secret-jwt-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Sync Configuration
SYNC_INTERVAL_HOURS=24
MAX_CONCURRENT_SYNC=5
SYNC_TIMEOUT_MS=300000

