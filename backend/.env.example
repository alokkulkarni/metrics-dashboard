# Environment
NODE_ENV=development
PORT=3001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=metrics_dashboard
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Jira Configuration (update with your values)
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=


# Auto-sync Configuration
JIRA_SYNC_INTERVAL_HOURS=2
JIRA_AUTO_SYNC_ENABLED=true

# Concurrent Sync Configuration
CONCURRENT_SYNC_ENABLED=true
SYNC_MAX_WORKERS=4
SYNC_MAX_CONCURRENT_BOARDS=8
SYNC_BATCH_SIZE=5
SYNC_DELAY_BETWEEN_BATCHES=2000
SYNC_CONCURRENT_THRESHOLD=20

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
